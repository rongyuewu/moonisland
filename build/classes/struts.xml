<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>	
	<!-- 开发者建议使用，发布时建议取消 -->
	<constant name="struts.devMode" value="true"></constant>
	<package name="emp" extends="struts-default" namespace="/emp">
		<action name="*" class="cn.com.action.EmpAction" method="{1}">
			<result name="list">/WEB-INF/jsp/list.jsp</result>
			<result name="success">/WEB-INF/jsp/add.jsp</result>
			<result name="show" type="redirect">/emp/showEmp</result>
		</action>
	</package>
</struts>
